---
const navItems = [
  { label: "Inicio", href: "/" },
  { label: "Proyectos", href: "#projects" },
  { label: "Sobre m√≠", href: "#about" },
  { label: "Contacto", href: "#contact" },
];

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<nav class:list={["flex gap-6", className]}>
  {
    navItems.map(({ label, href }) => (
      <a
        href={href}
        class="text-sm text-gray-300 hover:text-white transition-colors relative group"
      >
        {label}
        <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-purple-500 transition-all group-hover:w-full" />
      </a>
    ))
  }
</nav>