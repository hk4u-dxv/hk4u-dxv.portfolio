---
import { Button, Badge, GradientText } from "@components/ui";
---

<section class="relative min-h-screen pt-32 pb-32" aria-label="Introducción">
  <div class="max-w-5xl mx-auto text-center px-4">

    <!-- Título Principal -->
    <header class="mb-10">
      <h1 class="text-5xl md:text-7xl font-bold leading-tight tracking-tight">
        <span class="block text-white animate-fade-in duration-700">
          Hola, soy <GradientText>Gera</GradientText>
        </span>
        <span class="block text-4xl md:text-6xl mt-4 animate-fade-in-right delay-300 duration-700">
          <span class="text-gray-300">Full Stack</span>
          <span class="text-purple-400">Developer</span>
        </span>
      </h1>
    </header>

    <!-- Descripción -->
    <p
      class="text-gray-400 text-lg md:text-xl mx-auto max-w-2xl animate-fade-in delay-500 duration-1000 leading-relaxed mb-12"
    >
      Lorem ipsum dolor sit amet consectetur adipisicing elit. Explicabo molestias nihil soluta ab aut quod vero labore..
    </p>

    <!-- Botones de Acción -->
    <nav
      class="flex flex-col sm:flex-row justify-center gap-4 animate-fade-in delay-700 mb-20"
      aria-label="Navegación principal"
    >
      <Button
        variant="primary"
        href="#projects"
        class="group"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-5 h-5 mr-2 transition-transform group-hover:translate-x-1"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M5 12h14m-7-7 7 7-7 7"/>
        </svg>
        Ver Proyectos
      </Button>
      <Button
        variant="secondary"
        href="#contact"
        class="group"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-5 h-5 mr-2 transition-transform group-hover:scale-110"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M21 10v10a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V10"/>
          <path d="m21 10-8.97-5.98a1.94 1.94 0 0 0-2.06 0L2 10"/>
        </svg>
        Contactar
      </Button>
    </nav>

    <!-- Estadísticas -->
    <section
      class="relative max-w-4xl mx-auto"
      aria-label="Estadísticas profesionales"
    >
      <!-- Línea decorativa -->
      <div class="absolute inset-0 h-[1px] -top-px bg-gradient-to-r from-transparent via-purple-500/10 to-transparent"></div>

      <div 
        class="grid grid-cols-2 md:grid-cols-3 gap-4 md:gap-8 pt-12"
      >
        {
          [
            { 
              number: "0+", 
              text: "Lorem ipsum dolor", 
              icon: (
                <svg xmlns="http://www.w3.org/2000/svg" class="size-5" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M3.323 11.447l7.07 -7.071c.775 -.775 2.025 -.775 2.8 0l7.07 7.071c.775 .775 .775 2.025 0 2.8l-7.07 7.071c-.775 .775 -2.025 .775 -2.8 0l-7.07 -7.071c-.775 -.775 -.775 -2.025 0 -2.8" />
                  <path d="M9.5 14.5l1.5 -5.5l1.5 5.5" />
                  <path d="M12 16v-8" />
                </svg>
              ),
              description: "Lorem ipsum dolor"
            },
            { 
              number: "10+", 
              text: "Lorem ipsum dolor", 
              icon: (
                <svg xmlns="http://www.w3.org/2000/svg" class="size-5" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M9 4h6a2 2 0 0 1 2 2v14l-5 -3l-5 3v-14a2 2 0 0 1 2 -2" />
                </svg>
              ),
              description: "Lorem ipsum dolor"
            },
            { 
              number: "20+", 
              text: "Lorem ipsum dolor", 
              icon: (
                <svg xmlns="http://www.w3.org/2000/svg" class="size-5" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M19.5 12.572l-7.5 7.428l-7.5 -7.428a5 5 0 1 1 7.5 -6.566a5 5 0 1 1 7.5 6.572" />
                </svg>
              ),
              description: "Lorem ipsum dolor"
            },
          ].map((stat) => (
            <article
              class="group relative bg-gradient-to-br from-purple-500/5 via-purple-500/[0.02] to-transparent p-6 rounded-2xl transition-all duration-300 hover:scale-105 hover:from-purple-500/10 hover:via-purple-500/5"
            >
              <div class="flex items-center gap-2 text-purple-300/80 group-hover:text-purple-300 mb-4">
                {stat.icon}
                <h3 class="text-sm font-medium">{stat.text}</h3>
              </div>

              <div>
                <p class="text-4xl font-bold bg-gradient-to-r from-white to-gray-300 bg-clip-text text-transparent group-hover:from-purple-300 group-hover:to-purple-100 transition-all duration-300">
                  {stat.number}
                </p>
                <p class="text-gray-400 text-sm mt-1 group-hover:text-gray-300 transition-colors">
                  {stat.description}
                </p>
              </div>

              <!-- Borde brillante en hover -->
              <div class="absolute inset-0 rounded-2xl transition-opacity duration-300 opacity-0 group-hover:opacity-100">
                <div class="absolute inset-[-1px] rounded-2xl bg-gradient-to-r from-purple-500/30 to-transparent blur-sm" />
              </div>
            </article>
          ))
        }
      </div>
    </section>

    <!-- Decorative Elements -->
    <div class="absolute top-0 left-0 right-0 h-96 bg-gradient-to-b from-purple-500/5 to-transparent -z-10" />
    <div class="absolute bottom-0 left-0 right-0 h-96 bg-gradient-to-t from-purple-500/5 to-transparent -z-10" />
  </div>
</section>
