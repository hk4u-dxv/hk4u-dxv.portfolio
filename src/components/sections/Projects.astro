---
import { Card } from "@components/ui";

interface Project {
  title: string;
  description: string;
  image: string;
  tags: string[];
  href: string;
}

const projects: Project[] = [
  {
    title: "Proyecto 1",
    description: "Descripción del proyecto...",
    image: "",
    tags: ["React", "Node.js", "MongoDB"],
    href: "",
  },
  {
    title: "Proyecto 2",
    description: "Descripción del proyecto...",
    image: "",
    tags: ["Astro", "Express", "PostgreSQL"],
    href: "",
  },
];
---

<section id="projects" class="py-20">
  <div class="max-w-7xl mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-12">Proyectos Destacados</h2>

    <div class="grid md:grid-cols-2 gap-8">
      {
        projects.map((project) => (
          <Card href={project.href} class="group">
            <img
              src={project.image}
              alt={project.title}
              class="w-full h-48 object-cover rounded-lg mb-4"
            />
            <h3 class="text-xl font-bold mb-2 group-hover:text-purple-400">
              {project.title}
            </h3>
            <p class="text-gray-400 mb-4">{project.description}</p>
            <div class="flex flex-wrap gap-2">
              {project.tags.map((tag) => (
                <span class="px-2 py-1 bg-white/5 rounded-full text-sm">
                  {tag}
                </span>
              ))}
            </div>
          </Card>
        ))
      }
    </div>
  </div>
</section>
