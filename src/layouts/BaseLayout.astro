---
import { Header, Footer } from "@componentsLayout/index";
import Gradient from "@componentsUI/Gradient.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body class="bg-dark-950 text-white relative overflow-x-hidden">
    <!-- Gradientes de fondo -->
    <Gradient
      variant="purple"
      position="top-right"
      width={800}
      height={800}
      className="blur-3xl opacity-30"
    />
    <Gradient
      variant="blue"
      position="bottom-left"
      width={600}
      height={600}
      className="blur-3xl opacity-20"
    />
    <Header />
    <main class="relative">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --gradient-blur: 100px;
  }

  .bg-gradient-radial {
    background-image: radial-gradient(
      circle at center,
      var(--tw-gradient-stops)
    );
  }

  .blur-3xl {
    filter: blur(var(--gradient-blur));
  }
</style>
